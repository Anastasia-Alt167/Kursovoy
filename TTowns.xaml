<Page x:Class="Kursovoy.TTowns"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovoy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TTowns">

    <Grid Background="#00251a" >

        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="377*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <DataGrid Name="DGTowns" AutoGenerateColumns="False" Grid.Row="1" IsReadOnly="True">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Код города" Binding="{Binding Town_Code}" Width="*"/>

                <DataGridTextColumn Header="Название города" Binding="{Binding Town1}" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
       

        <Button  Height="30" Width="200" FontSize="15" Content="Назад" Grid.Row="2" 
                HorizontalAlignment="Center"  BorderBrush = "{x:Null}" Click="BackTable" />

        


    </Grid>
</Page>
